<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:custom="urn:import:br.pucpr.gss.client.view.uibinder">
    <g:DockLayoutPanel unit='EM'>
        <g:north size="5">
            <g:HorizontalPanel>
                <g:Label>CADASTRO DE SOLICITAÇÃO</g:Label>
            </g:HorizontalPanel>
        </g:north>
        <g:west size='16'>
            <custom:MenuViewImpl ui:field="menu"/>
        </g:west>

        <g:center>
            <g:VerticalPanel>
                <g:HorizontalPanel>
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Título da solicitação</ui:msg>
                        </g:Label>
                        <g:TextBox ui:field="titulo"/>
                    </g:VerticalPanel>
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Setor responsável</ui:msg>
                        </g:Label>
                        <g:ListBox ui:field="setor"/>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <g:Label>
                    <ui:msg>Descrição</ui:msg>
                </g:Label>
                <g:TextArea ui:field="descricao"/>
                <g:HorizontalPanel>
                    <g:Button ui:field="cancelar">
                        <ui:msg>Cancelar</ui:msg>
                    </g:Button>
                    <g:Button ui:field="cadastrar">
                        <ui:msg>Cadastrar</ui:msg>
                    </g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>