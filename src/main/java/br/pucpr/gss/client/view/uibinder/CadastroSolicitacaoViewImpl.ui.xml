<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:custom="urn:import:br.pucpr.gss.client.view.uibinder">

    <g:HTMLPanel>
        <m:MaterialRow margin="0" width="100%" height="8%" backgroundColor="GREY_LIGHTEN_4" shadow="1"
                       addStyleNames="valign-wrapper">
            <m:MaterialLabel text="Cadastro de solicitação" marginLeft="42" fontSize="20px" fontWeight="BOLD"
                             addStyleNames="valign center"/>
        </m:MaterialRow>

        <m:MaterialRow margin="0">
            <m:MaterialColumn margin="0" height="92%">
                <custom:MenuViewImpl ui:field="menu"/>
            </m:MaterialColumn>

            <m:MaterialColumn margin="0" layoutPosition="ABSOLUTE" marginLeft="180" width="100%" height="92%"
                              overflow="AUTO">
                <m:MaterialPanel padding="16">
                    <m:MaterialRow>
                        <m:MaterialTextBox ui:field="textBoxTitulo" label="Título da solicitação" fieldType="OUTLINED"
                                           focus="true"/>
                        <m:MaterialListBox ui:field="listBoxSetor" placeholder="Setor responsável" fieldType="OUTLINED"/>
                    </m:MaterialRow>
                    <m:MaterialRow>
                        <m:MaterialTextArea ui:field="textAreaDescricao" label="Descrição" fieldType="OUTLINED"/>
                    </m:MaterialRow>
                    <m:MaterialRow>
                        <m:MaterialButton ui:field="cancelar" text="Cancelar"/>
                        <m:MaterialButton ui:field="cadastrar" text="Cadastrar"/>
                    </m:MaterialRow>
                </m:MaterialPanel>
            </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>