<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <div align="center">
            <g:VerticalPanel>
                <g:Label horizontalAlignment="center">
                    <ui:msg>LOGIN</ui:msg>
                </g:Label>
                <g:Label>
                    <ui:msg>Email</ui:msg>
                </g:Label>
                <g:TextBox ui:field="textBoxEmail"/>
                <g:Label>
                    <ui:msg>Senha</ui:msg>
                </g:Label>
                <g:PasswordTextBox ui:field="textBoxSenha"/>
                <g:Label ui:field="labelErro" visible="false"/>
                <g:Button ui:field="buttonLogin">
                    <ui:msg>Login</ui:msg>
                </g:Button>
                <g:Hyperlink ui:field="hyperlinkCadastrar">
                    <ui:msg>Cadastrar</ui:msg>
                </g:Hyperlink>
            </g:VerticalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>