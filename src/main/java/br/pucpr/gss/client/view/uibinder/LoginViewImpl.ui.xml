<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <m:MaterialContainer addStyleNames="valign-wrapper">
        <m:MaterialRow width="300" addStyleNames="valign center">
            <m:MaterialCard textAlign="LEFT">
                <m:MaterialCardContent>
                    <m:MaterialLabel text="LOGIN" textAlign="CENTER" fontWeight="BOLD"/>
                    <m:MaterialTextBox ui:field="textBoxEmail" type="EMAIL" label="Email" fieldType="OUTLINED"
                                       focus="true"/>
                    <m:MaterialTextBox ui:field="textBoxSenha" type="PASSWORD" label="Senha" fieldType="OUTLINED"/>
                    <m:MaterialRow marginTop="16">
                        <m:MaterialLink ui:field="linkCadastrar" text="Cadastrar"/>
                        <m:MaterialButton ui:field="buttonLogin" text="Entrar" type="OUTLINED"
                                          backgroundColor="GREY_LIGHTEN_3" marginLeft="65"/>
                    </m:MaterialRow>
                </m:MaterialCardContent>
            </m:MaterialCard>
        </m:MaterialRow>
    </m:MaterialContainer>
</ui:UiBinder>