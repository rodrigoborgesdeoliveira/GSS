<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m="urn:import:gwt.material.design.client.ui">
    <m:MaterialContainer addStyleNames="valign-wrapper">
        <m:MaterialRow width="400" addStyleNames="valign center">
            <m:MaterialCard textAlign="LEFT">
                <m:MaterialCardContent>
                    <m:MaterialLabel text="CADASTRO" textAlign="CENTER" fontWeight="BOLD"/>
                    <m:MaterialTextBox ui:field="textBoxEmail" label="Email" type="EMAIL" fieldType="OUTLINED"
                                       focus="true"/>
                    <m:MaterialTextBox ui:field="textBoxSenha" label="Senha" type="PASSWORD" fieldType="OUTLINED"/>
                    <m:MaterialTextBox ui:field="textBoxConfirmarSenha" label="Confirmar senha" type="PASSWORD"
                                       fieldType="OUTLINED"/>
                    <m:MaterialRow marginTop="16">
                        <m:MaterialColumn>
                            <m:MaterialButton ui:field="buttonCancelar" text="Cancelar" type="OUTLINED"
                                              backgroundColor="GREY_LIGHTEN_3" marginRight="8"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn>
                            <m:MaterialButton ui:field="buttonCadastrar" text="Cadastrar" type="OUTLINED"
                                              backgroundColor="GREY_LIGHTEN_3"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                </m:MaterialCardContent>
            </m:MaterialCard>
        </m:MaterialRow>
    </m:MaterialContainer>
</ui:UiBinder>