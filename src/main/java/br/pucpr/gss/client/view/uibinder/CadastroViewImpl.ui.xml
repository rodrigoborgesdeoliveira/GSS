<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <div align="center">
            <g:VerticalPanel>
                <g:Label horizontalAlignment="center">
                    <ui:msg>CADASTRO</ui:msg>
                </g:Label>
                <g:Label>
                    <ui:msg>Email</ui:msg>
                </g:Label>
                <g:TextBox ui:field="email"/>
                <g:Label>
                    <ui:msg>Senha</ui:msg>
                </g:Label>
                <g:PasswordTextBox ui:field="senha"/>
                <g:Label>
                    <ui:msg>Confirmar senha</ui:msg>
                </g:Label>
                <g:PasswordTextBox ui:field="confirmarSenha"/>
                <g:Label ui:field="labelErro" visible="false"/>
                <g:HorizontalPanel>
                    <g:Button ui:field="cancelar">
                        <ui:msg>Cancelar</ui:msg>
                    </g:Button>
                    <g:Button ui:field="buttonCadastrar">
                        <ui:msg>Cadastrar</ui:msg>
                    </g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>