<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:custom="urn:import:br.pucpr.gss.client.view.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <g:HTMLPanel>
        <m:MaterialRow margin="0" width="100%" height="8%" backgroundColor="GREY_LIGHTEN_4" shadow="1"
                       addStyleNames="valign-wrapper">
            <m:MaterialLabel text="Dashboard" marginLeft="42" fontSize="20px" fontWeight="BOLD"
                             addStyleNames="valign center"/>
        </m:MaterialRow>

        <m:MaterialRow margin="0">
            <m:MaterialColumn margin="0" height="92%">
                <custom:MenuViewImpl ui:field="menu"/>
            </m:MaterialColumn>

            <m:MaterialColumn margin="0" layoutPosition="ABSOLUTE" marginLeft="180" width="100%" height="92%"
                              overflow="AUTO">
                <m:MaterialPanel padding="16">
                    <m:MaterialLabel text="Indicadores..."/>
                </m:MaterialPanel>
            </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>