<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:custom="urn:import:br.pucpr.gss.client.view.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">


    <g:HTMLPanel>
        <m:MaterialRow margin="0" width="100%" height="8%" backgroundColor="GREY_LIGHTEN_4" shadow="1"
                       addStyleNames="valign-wrapper">
            <m:MaterialLabel text="Dashboard" marginLeft="42" fontSize="20px" fontWeight="BOLD"
                             addStyleNames="valign center"/>
        </m:MaterialRow>

        <m:MaterialRow>
            <m:MaterialColumn grid="s2" marginLeft="-11" height="92%">
                <custom:MenuViewImpl ui:field="menu"/>
            </m:MaterialColumn>

            <m:MaterialColumn grid="s10" offset="s2" layoutPosition="ABSOLUTE" height="92%"
                              overflow="AUTO">
                <m:MaterialPanel padding="16">
                    <m:MaterialRow>
                        <m:MaterialColumn grid="s4">
                            <m:MaterialCard height="350">
                                <m:MaterialCardContent>
                                    <m:MaterialCardTitle text="Total de Solicitações" textAlign="CENTER"
                                                         fontWeight="BOLD"/>
                                    <m:MaterialLabel ui:field="quantidadeTotal" fontSize="100px" textAlign="CENTER"
                                                     marginTop="50" marginBottom="50"/>
                                </m:MaterialCardContent>
                            </m:MaterialCard>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="s4">
                            <m:MaterialCard>
                                <m:MaterialCardContent>
                                    <m:MaterialCardTitle text="Solicitações Abertas" textAlign="CENTER"
                                                         fontWeight="BOLD"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertas" fontSize="24px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoAguardandoAtendimento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoEmAndamento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoPausada"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoEncerramentoProposto"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoEncerramentoRejeitado"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoRespondida"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasEstadoAguardandoInformacoesAdicionais"
                                                     fontSize="14px"/>
                                    <m:MaterialDivider marginTop="8" marginBottom="8"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasPrioridadeBaixa"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasPrioridadeNormal"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAbertasPrioridadeAlta"
                                                     fontSize="14px"/>
                                </m:MaterialCardContent>
                            </m:MaterialCard>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="s4">
                            <m:MaterialCard height="350">
                                <m:MaterialCardContent>
                                    <m:MaterialCardTitle text="Solicitações Encerradas" textAlign="CENTER"
                                                         fontWeight="BOLD"/>
                                    <m:MaterialLabel ui:field="quantidadeEncerradas" fontSize="100px" textAlign="CENTER"
                                                     marginTop="50" marginBottom="50"/>
                                </m:MaterialCardContent>
                            </m:MaterialCard>
                        </m:MaterialColumn>
                    </m:MaterialRow>

                    <m:MaterialRow>
                        <m:MaterialColumn grid="s4">
                            <m:MaterialCard>
                                <m:MaterialCardContent>
                                    <m:MaterialCardTitle text="Solicitadas" textAlign="CENTER" fontWeight="BOLD"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadas" fontSize="24px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoAguardandoAtendimento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoEmAndamento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoPausada"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoEncerramentoProposto"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoEncerramentoRejeitado"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoRespondida"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel
                                            ui:field="quantidadeSolicitadasEstadoAguardandoInformacoesAdicionais"
                                            fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasEstadoEncerrada"
                                                     fontSize="14px"/>
                                    <m:MaterialDivider marginTop="8" marginBottom="8"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasPrioridadeBaixa"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasPrioridadeNormal"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeSolicitadasPrioridadeAlta"
                                                     fontSize="14px"/>
                                </m:MaterialCardContent>
                            </m:MaterialCard>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="s4">
                            <m:MaterialCard>
                                <m:MaterialCardContent>
                                    <m:MaterialCardTitle text="Atendidas" textAlign="CENTER" fontWeight="BOLD"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidas" fontSize="24px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoAguardandoAtendimento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoEmAndamento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoPausada"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoEncerramentoProposto"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoEncerramentoRejeitado"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoRespondida"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoAguardandoInformacoesAdicionais"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasEstadoEncerrada"
                                                     fontSize="14px"/>
                                    <m:MaterialDivider marginTop="8" marginBottom="8"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasPrioridadeBaixa"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasPrioridadeNormal"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeAtendidasPrioridadeAlta"
                                                     fontSize="14px"/>
                                </m:MaterialCardContent>
                            </m:MaterialCard>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="s4">
                            <m:MaterialCard>
                                <m:MaterialCardContent>
                                    <m:MaterialCardTitle text="Gerenciadas" textAlign="CENTER" fontWeight="BOLD"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadas" fontSize="24px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoAguardandoAtendimento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoEmAndamento"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoPausada"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoEncerramentoProposto"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoEncerramentoRejeitado"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoRespondida"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel
                                            ui:field="quantidadeGerenciadasEstadoAguardandoInformacoesAdicionais"
                                            fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasEstadoEncerrada"
                                                     fontSize="14px"/>
                                    <m:MaterialDivider marginTop="8" marginBottom="8"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasPrioridadeBaixa"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasPrioridadeNormal"
                                                     fontSize="14px"/>
                                    <m:MaterialLabel ui:field="quantidadeGerenciadasPrioridadeAlta"
                                                     fontSize="14px"/>
                                </m:MaterialCardContent>
                            </m:MaterialCard>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                </m:MaterialPanel>
            </m:MaterialColumn>
        </m:MaterialRow>
    </g:HTMLPanel>
</ui:UiBinder>