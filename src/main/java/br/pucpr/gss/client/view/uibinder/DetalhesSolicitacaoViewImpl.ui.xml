<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:dp="urn:import:com.google.gwt.user.datepicker.client"
             xmlns:custom="urn:import:br.pucpr.gss.client.view.uibinder">
    <g:DockLayoutPanel unit='EM'>
        <!-- Cabeçalho -->
        <g:north size="5">
            <g:HorizontalPanel>
                <g:Label>DETALHES DA SOLICITAÇÃO</g:Label>
                <g:Hyperlink ui:field="linkRequisitarInformacoesAdicionais" visible="false">
                    <ui:msg>Requisitar informações adicionais</ui:msg>
                </g:Hyperlink>
                <g:Hyperlink ui:field="linkRegistrarInformacoesAdicionais" visible="false">
                    <ui:msg>Registrar informações adicionais</ui:msg>
                </g:Hyperlink>
                <g:Hyperlink ui:field="linkOferecerSolucao" visible="false">
                    <ui:msg>Oferecer solução</ui:msg>
                </g:Hyperlink>
            </g:HorizontalPanel>
        </g:north>

        <!-- Menu -->
        <g:west size='16'>
            <custom:MenuViewImpl ui:field="menu"/>
        </g:west>

        <!-- Corpo da página -->
        <g:center>
            <g:VerticalPanel>
                <g:HorizontalPanel>
                    <!-- Título da solicitação -->
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Título da solicitação</ui:msg>
                        </g:Label>
                        <g:Label ui:field="labelTituloSolicitacao"/>
                    </g:VerticalPanel>
                    <!-- Data inicial -->
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Data inicial</ui:msg>
                        </g:Label>
                        <g:Label ui:field="labelDataInicial"/>
                    </g:VerticalPanel>
                    <!-- Prazo -->
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Prazo</ui:msg>
                        </g:Label>
                        <g:Label ui:field="labelPrazo"/>
                        <dp:DateBox ui:field="dateBoxPrazoVisaoAtendente" visible="false"/>
                    </g:VerticalPanel>
                    <!-- Setor responsável -->
                    <g:VerticalPanel ui:field="verticalPanelSetor">
                        <g:Label>
                            <ui:msg>Setor responsável</ui:msg>
                        </g:Label>
                        <g:ListBox ui:field="listBoxSetorVisaoGestor" visible="false"/>
                        <g:Label ui:field="labelSetorVisaoSolicitante" visible="false"/>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <!-- Estado -->
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Estado</ui:msg>
                        </g:Label>
                        <g:Label ui:field="labelEstado"/>
                    </g:VerticalPanel>
                    <!-- Prioridade -->
                    <g:VerticalPanel>
                        <g:Label>
                            <ui:msg>Prioridade</ui:msg>
                        </g:Label>
                        <g:ListBox ui:field="listBoxPrioridade"/>
                    </g:VerticalPanel>
                    <!-- Atendente -->
                    <g:VerticalPanel ui:field="verticalPanelAtendente">
                        <g:Label>
                            <ui:msg>Atendente</ui:msg>
                        </g:Label>
                        <g:Label ui:field="labelAtendenteVisaoSolicitante" visible="false"/>
                        <g:ListBox ui:field="listBoxAtendenteVisaoGestor" visible="false"/>
                    </g:VerticalPanel>
                    <!-- Atendimento -->
                    <g:VerticalPanel ui:field="verticalPanelAtendimento" visible="false">
                        <g:Label>
                            <ui:msg>Atendimento</ui:msg>
                        </g:Label>
                        <g:HorizontalPanel>
                            <g:Button ui:field="buttonIniciarAtendimento" visible="false">
                                <ui:msg>Iniciar</ui:msg>
                            </g:Button>
                            <g:Button ui:field="buttonPausarAtendimento" visible="false">
                                <ui:msg>Pausar</ui:msg>
                            </g:Button>
                            <g:Button ui:field="buttonContinuarAtendimento" visible="false">
                                <ui:msg>Retomar</ui:msg>
                            </g:Button>
                        </g:HorizontalPanel>
                    </g:VerticalPanel>
                </g:HorizontalPanel>
                <!-- Descrição -->
                <g:Label>
                    <ui:msg>Descrição</ui:msg>
                </g:Label>
                <g:TextArea width="600px" height="250px" ui:field="textAreaDescricao" enabled="false"/>
                <!-- Histórico -->
                <g:Label>
                    <ui:msg>Histórico</ui:msg>
                </g:Label>
                <g:ListBox width="600px" ui:field="listBoxHistorico" visibleItemCount="10"/>
                <!-- Botões inferiores -->
                <g:HorizontalPanel>
                    <g:Button ui:field="buttonCancelar">
                        <ui:msg>Cancelar</ui:msg>
                    </g:Button>
                    <g:Button ui:field="buttonSalvar">
                        <ui:msg>Salvar</ui:msg>
                    </g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:center>
    </g:DockLayoutPanel>
</ui:UiBinder>